@model Business.Cliente
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Presentation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Presentation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            <br />
            <h2>LISTA DE TRANSACCIONES</h2>
            <br />
            <br>
            <table class="table table-striped table-hover">
                <thead>
                    <tr style="background-color:darkslategrey">
                        <td style="visibility:collapse; display:none;">IdTransaccion</td>
                        <td style="visibility:collapse; display:none;">IdTipoTransaccion</td>
                        <td style="color:white">Transaccion</td>
                        <td style="color:white">Detalle</td>
                        <td style="color:white">Fecha de Transaccion</td>
                        <td style="visibility:collapse; display:none;">IdNumeroCuenta</td>
                        <td style="color:white">Nombre de Cuenta</td>
                        <td style="color:white">Saldo</td>
                        <td style="visibility:collapse; display:none;">IdCliente</td>
                        <td style="color:white">Nombre</td>
                        <td style="color:white">Numero de Cliente</td>
                        <td style="color:white">Monto de la Transaccion</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Business.Cliente cliente in Model.Historial.Transacciones)
                    {
                        <tr>
                            <td style="visibility:collapse; display:none;">@cliente.Historial.IdTransaccion</td>
                            <td style="visibility:collapse; display:none;">@cliente.Historial.IdTipoTransaccion.</td>
                            <td>@cliente.Historial.Transaccion </td>
                            <td>@cliente.Historial.Detalle</td>
                            <td>@cliente.Historial.FechaTransaccion</td>
                            <td style="visibility:collapse; display:none;">@cliente.Historial.IdNumeroCuenta.</td>
                            <td>@cliente.Historial.NombreDeCuenta</td>
                            <td>$ @cliente.Historial.Saldo</td>
                            <td style="visibility:collapse; display:none;">@cliente.Historial.IdCliente.</td>
                            <td>@cliente.Historial.Nombre  @cliente.Historial.ApellidoPaterno @cliente.Historial.ApellidoMaterno</td>
                            <td>@cliente.Historial.NumeroCliente</td>
                            <td>$ @cliente.Historial.MontoTransaccion</td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr />

        </main>
    </div>

</body>
</html>
